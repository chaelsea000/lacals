extends layout_kor.pug 
block variables 
  -var menuType = "intro"

block div
  
    p#logo LaCalS
    p#welcomeText
    a.cta(href="intro.html")
      span Click me
      svg(width="13px" height="10px" viewBox="0 0 13 10")
        path(d="M1,5 L11,5")
        polyline(points="8 1 12 5 8 9")
  style.
    
    .introWrap { 
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100vh;
        background-color: #43564A; cursor: pointer;}

      #logo {
          font-size: 64px;
          color: #ed751c;
          font-weight: bold;
          position: absolute;
          transition: top 3s ease-out, opacity 3s ease-out;
          top: 50%;
          transform: translateY(-50%);
          opacity: 1;
      }

      #logo.hide {
          top: -25%; /* 화면 위쪽으로 더 멀리 이동 */
          opacity: 0;
      }

      #welcomeText {
        font-size: 44px;
        color: white;
        font-weight: bold;
        opacity: 0;
        position: absolute;
        top: 50%;
        transition: opacity 1s;
      }

      #welcomeText{
        opacity: 1;
      }
     @keyframes fadeUpAnimation {
        0% {opacity: 1;}
        100% {opacity: 0;}
      }

      .cta {
        position: relative;
        margin-top: 20px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        padding: 19px 22px;
        transition: all 0.2s ease;
      }
      .cta:before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        display: block;
        border-radius: 28px;
        background: rgba(255, 171, 157, 0.5);
        width: 56px;
        height: 56px;
        transition: all 0.3s ease;
      }
      .cta span {
        position: relative;
        font-size: 16px;
        line-height: 18px;
        font-weight: 900;
        letter-spacing: 0.25em;
        text-transform: uppercase;
        vertical-align: middle;
      }
      .cta svg {
        position: relative;
        top: 0;
        margin-left: 10px;
        fill: none;
        stroke-linecap: round;
        stroke-linejoin: round;
        stroke: #111;
        stroke-width: 2;
        transform: translateX(-5px);
        transition: all 0.3s ease;
      }
      .cta:hover:before {
        width: 100%;
        background: #ffab9d;
      }
      .cta:hover svg {
        transform: translateX(0);
      }
      .cta:active {
        transform: scale(0.96);
      }
      
  script.
    function showText(target, text, index, interval) {
        if (index < text.length) {
            document.querySelector(target).textContent += text[index++];
            setTimeout(function() { showText(target, text, index, interval); }, interval);
        }
        document.querySelector('.cta').classList.add('show');
    }

    window.addEventListener('load', () => {
      setTimeout(() => {
        document.querySelector('#logo').classList.add('hide');
        setTimeout(() => {
          document.querySelector('#welcomeText').classList.add('show');
          showText("#welcomeText", "All kids have their own stage to PLAY!", 0, 100);
        }, 1000);
      }, 1000);
    });